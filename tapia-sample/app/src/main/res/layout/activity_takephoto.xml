<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/fm"
    android:background="#000100">



    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/previewView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    
    <view
        class="com.m_and_n.view.FaceDetectView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/faceDetectView"/>

    <view
        android:layout_width="75dp"
        android:layout_height="75dp"
        class="com.tapia.mji.tapialib.Views.TapiaTextView"
        android:id="@+id/yes"
        android:text="Yes"
        android:textSize="14sp"
        android:background="@drawable/green_button"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <view
        class="com.tapia.mji.tapialib.Views.TapiaTextView"
        android:id="@+id/no"
        android:text="No"
        android:textSize="14sp"
        android:background="@drawable/red_button"
        android:gravity="center"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="#70CC00"
        android:background="@drawable/confirm_text"
        android:text="あああああ"
        android:id="@+id/nameTextView"
        />


    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="48dp"
        android:gravity="center"
        android:visibility="invisible"
        android:padding="20dp"
        android:background="@drawable/dialog_style"
        android:id="@+id/reserveInfo"
        >
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_span="2"
                android:textSize="32sp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/table_cell"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="予約情報"/>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:textAlignment="center"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="2"
                    android:text="氏名"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:background="@drawable/table_cell"
                    android:text="氏名"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="3"
                    android:id="@+id/name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:textAlignment="center"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="2"
                    android:text="日付"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:background="@drawable/table_cell"
                    android:text="2017-07-07"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="3"
                    android:id="@+id/created"/>
            </LinearLayout>



        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:textAlignment="center"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="2"
                    android:text="OUT/IN"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:text="OUT"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="3"
                    android:id="@+id/inout"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:textAlignment="center"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="2"
                    android:text="スタート"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:text="00:00"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="3"
                    android:id="@+id/start"/>
            </LinearLayout>

        </TableRow>

        <TableRow>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:textAlignment="center"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="2"
                    android:text="組数"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:layout_weight="3"
                    android:paddingRight="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="32sp"
                        android:text="0"
                        android:id="@+id/groupNum"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="32sp"
                        android:text="組" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="32sp"
                    android:textAlignment="center"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_weight="2"
                    android:text="人数"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:layout_weight="3"
                    android:paddingRight="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="32sp"
                        android:text="0"
                        android:id="@+id/playerNum"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="32sp"
                        android:text="名" />
                </LinearLayout>
            </LinearLayout>




        </TableRow>

        <TableRow>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:textSize="32sp"
                android:textAlignment="center"
                android:background="@drawable/table_cell"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_weight="2"
                android:text="備考"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_span="3"
                android:textSize="20sp"
                android:background="@drawable/table_cell"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="氏名"
                android:layout_weight="8"
                android:id="@+id/comment"/>
        </TableRow>

        <TableRow>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_span="2"
                android:background="@drawable/table_cell"
                android:layout_marginTop="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="OK"
                android:layout_weight="1"
                android:id="@+id/backBtn"/>
        </TableRow>
        
    </TableLayout>

    <ImageView
        android:layout_height="300dp"
        android:layout_width="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/mLoadingImageView"
        android:visibility="invisible"
        />

</RelativeLayout>